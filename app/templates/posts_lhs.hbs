
<div class="span12" style="margin-bottom: 30px;">
<h4 class="cursive"> Recent Posts </h4>
{{#each recentPosts}}
<div class="span12">
  {{#linkTo 'post' this}}{{name}}{{/linkTo}}
</div>  
{{/each}}
</div>


<div class="span12" style="margin-bottom: 30px;">
<h4 class="cursive"> Blog Archive </h4>
{{#each archives itemController="yearItem"}}
  <div class="span12">
    <a {{action toggleProperty 'isExpanded'}}> {{#if isExpanded}} <small>&nbsp; v &nbsp;</small> {{else}}<small>&nbsp; > &nbsp;</small>{{/if}}  {{key}}</a> ({{totalYearPosts}})
  {{#if isExpanded}}
  {{#each value itemController="monthItem"}}
  <div class="span12" style="margin-left: 10px;">
    <a {{action toggleProperty 'isExpanded'}}> {{#if isExpanded}} <small>&nbsp; v &nbsp;</small> {{else}}<small>&nbsp; > &nbsp;</small>{{/if}} {{key}}</a> ({{value.length}})
    {{#if isExpanded}}
    {{#each value}}
    <div class="span12" style="margin-left: 30px;">
      {{#linkTo 'post' this}}{{name}}{{/linkTo}}
    </div>
    {{/each}}
    {{/if}}
  </div>
  {{/each}}
  {{/if}}
  </div>
  {{/each}}
</div>
